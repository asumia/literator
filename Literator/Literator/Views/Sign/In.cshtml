@{
    Layout = null;
}
@model AuthorizationData

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Sign in</title>
    <link rel="stylesheet" href="~/css/signstyle.css">
    <link rel="shortcut icon" href="~/images/siteicon.svg" type="image/svg">
</head>
<body>
    <form class="signin_box" asp-action="In" method="post">
        <h1>Sign in</h1>
        <input asp-for="email" class="baumans" type="email" placeholder="email@example.com" autocomplete="off" required>
        <input asp-for="password" class="baumans" type="password" placeholder="Password" autocomplete="off" required>
        <label class="baumans error">@ViewBag.ClientAuthError</label>
        <input class="baumans button" type="submit" value="Login">
    </form>
</body>
</html>